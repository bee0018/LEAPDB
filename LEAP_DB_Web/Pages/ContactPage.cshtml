@page
@model LEAP_DB_Web.Pages.ContactPageModel
@{
    ViewData["Title"] = "Contact";
}
<style>
    .footer{display: none !important}
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Dashboard">Home</a>
        </div>
    </nav>
</header>

<div>
    <h1 style="text-align: center">Contact Us</h1>
    <h6 style="text-align: right; margin-bottom: -15px">@DateTime.Now</h6>
</div>

<form>
    <div>
        <label style="font-weight: 500; margin-top: 24px;">Email address:</label>
        <input type="email" class="form-control" style="margin-bottom: 35px">
    </div>  
        <label style="font-weight: 500">Message:</label>
    <div>
        <textarea style="height: 500px; width: 100%"></textarea>
    </div>
    <div>

    </div>
    <div align="center">
        <button type="submit" class="btn btn-primary loginButton" style="margin-top: 80px;">Send Email</button>
    </div>
</form>