@page
@model LEAP_DB_Web.Pages.Login.ContactPageModel
@{
    ViewData["Title"] = "Contact";
}
<style>
    .footer{display: none !important}
</style>

<!--Header leading back to login screen-->
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Return to Login Screen</a>
        </div>
    </nav>
</header>

<!--Header and Time stamp-->
<div>
    <h1 style="text-align: center">Contact Us</h1>
    <h6 style="text-align: right; margin-bottom: -15px">@DateTime.Now</h6>
</div>

<form method="post">
    <!--Email user is sending message to-->
    <div>
        <label style="font-weight: 500; margin-top: 24px;">Email address:</label>
        <input type="email" class="form-control" name="emailAddress" style="margin-bottom: 10px">
    </div>
    
    <!--Subject of the email-->
    <div>
        <label style="font-weight: 500;">Subject:</label>
        <input type="text" class="form-control" name="subject" style="margin-bottom: 10px">
    </div>
    
    <!--Message of the email-->
    <label style="font-weight: 500">Message:</label>
    <div>
        <textarea style="height: 470px; width: 100%" name="message"></textarea>
    </div>
    
    <!--Send Email Button-->
    <div align="center">
        <button type="submit" class="btn btn-primary loginButton" style="margin-top: 50px;">Send Email</button>
    </div>
</form>