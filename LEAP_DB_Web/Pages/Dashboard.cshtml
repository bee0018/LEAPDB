@page
@model LEAP_DB_Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .grid { 
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap: 20px;
        align-items: stretch;
    }
    .grid > article {
        border: 1px solid #ccc;
        box-shadow: 2px 2px 6px 0px  rgba(0,0,0,0.3);
    }
    .grid > article img {
        max-width: 100%;
    }
    .text {
        padding: 0 20px 20px;
    }
    .text > button {
        background: gray;
        border: 0;
        color: white;
        padding: 10px;
        width: 100%;
    }
</style>

<h1 style="text-align: center">Welcome Back, User!</h1>

<main class="grid">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="logos/rosterLogo.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Roster</h5>
            <p class="card-text">Add, update, or delete your current roster. </p>
            <a href="/RosterPage" class="btn btn-primary">Go</a>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="logos/addNewUser.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Registration</h5>
            <p class="card-text">Add, update, or delete users from the system.</p>
            <a href="/RegistrationPage" class="btn btn-primary">Go</a>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="logos/darkblue_book_logo.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Modules</h5>
            <p class="card-text">Add, update, or delete modules for your students.</p>
            <a href="/ModulePage" class="btn btn-primary">Go</a>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="logos/activities.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Activities</h5>
            <p class="card-text">Add, update, or delete any activities.</p>
            <a href="" class="btn btn-primary">Go</a>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="logos/contact.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Contact Us</h5>
            <p class="card-text">Send an email showing your student reports and more.</p>
            <a href="/ContactPage" class="btn btn-primary">Go</a>
        </div>
    </div>
</main>


